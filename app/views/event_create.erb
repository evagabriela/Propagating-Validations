<h1>Event Creator</h1>
<form action='/events/create' method='post'>
  <input type="text" name="title" placeholder="Title for your event" ><br>
  <input type="text" name="organizer_name" placeholder="Your name" ><br>
  <input type="text" name="organizer_email" placeholder="Your email" ><br>
  <input type="date" name="date" ><br>
  <input type="submit" value="Create an Event"><br>
</form>

<% if @errors %>
  <% @errors.full_messages.each do |error| %>
    <span class="error"><%= error %></span><br>
  <% end %>
<% end %>